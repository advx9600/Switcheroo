<Window x:Class="Switcheroo.WinRowEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Switcheroo"
        mc:Ignorable="d"
        Title="WinRowEdit" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="TBoxName" HorizontalAlignment="Left" Height="23" Margin="58,85,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TBoxHotkey" HorizontalAlignment="Left" Height="23" Margin="250,85,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Button Content="ok" Click="ButtonOk_Click" HorizontalAlignment="Left" Margin="250,203,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="cancel" Click="ButtonCancel_Click" HorizontalAlignment="Left" Margin="58,203,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBox x:Name="TBoxExePath" HorizontalAlignment="Left" Height="23" Margin="58,146,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="520"/>
        <Button Content="set current" Click="ButtonSetCurrent_Click" HorizontalAlignment="Left" Margin="614,151,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
